<section class="banner">
  <div class="banner__content">
    {% comment %} navbar {% endcomment %}
    <div class="navbar">
      <!-- Mobile hamburger menu -->
      <div class="mobile-menu-toggle-container">
        <div class="mobile-menu-toggle" id="mobile-menu-toggle">
        <div class="hamburger-menu">
          <span class="hamburger-line"></span>
          <span class="hamburger-line"></span>
          <span class="hamburger-line"></span>
        </div>
        </div>
        <p class="banner__title--mobile">{{ section.settings.title }}</p>
      </div>
      <!-- Desktop navigation -->
      <div class="navbar-content">
        <p class="banner__title">{{ section.settings.title }}</p>
        <p class="banner__middleText">{{ section.settings.middleText }}</p>
        {%- render 'button', button_text: section.settings.buttonText, button_style: 'yellow' -%}
      </div>
      
      <!-- Mobile navigation menu -->
      <div class="mobile-menu" id="mobile-menu">
        <p class="banner__middleText">{{ section.settings.middleText }}</p>
        {%- render 'button', button_text: section.settings.buttonText, button_style: 'yellow' -%}
      </div>
    </div>
    {% comment %} banner image (Desktop only) {% endcomment %}
    <div class="banner__image">
      <img src="{{ "banner_main.png" | asset_url }}" alt="" width="100%" height="100%">
    </div>
    {% comment %} banner Hero {% endcomment %}
    <div class="banner__hero">
      <div class="banner__hero-content">
        <p class="banner__hero-title">{{ section.settings.hero_title }}</p>
        <p class="banner__hero-middleText banner__hero-middleText--desktop">{{ section.settings.hero_middle_text_desktop }}</p>
        <p class="banner__hero-middleText--mobile">{{ section.settings.hero_middle_text_mobile }}</p>

        {%- render 'button', button_text: section.settings.hero_button_text, button_style: 'black' -%}
      </div>
      <div class="banner__hero-image-container">
        <img src="{{ "banner_hero.png" | asset_url }}" alt="banner hero" width="100%" height="100%" class="banner__hero-image">
        {%- render 'button', button_text: section.settings.hero_button_text, button_style: 'black' -%}
      </div>
    </div>
    {% comment %} banner footer {% endcomment %}
    <div class="banner__footer">
        {%if section.settings.footer_text_mobile != blank%}
        <p class="banner__footer-text footer-text--mobile">{{ section.settings.footer_text_mobile }}</p>
        {%endif%}
        {%if section.settings.footer_text_desktop != blank%}
        <p class="banner__footer-text footer-text--desktop">{{ section.settings.footer_text_desktop }}</p>
        {%endif%}
    </div>
  </div>
</section>
<style>
  
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const mobileMenuToggleContainer = document.querySelector('.mobile-menu-toggle-container');
  const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
  const mobileMenu = document.getElementById('mobile-menu');
  
  if (mobileMenuToggle && mobileMenu) {
    mobileMenuToggle.addEventListener('click', function() {
      mobileMenuToggleContainer.classList.toggle('active');
      mobileMenuToggle.classList.toggle('active');
      mobileMenu.classList.toggle('active');
    });
    
    // Close menu when clicking on menu items
    mobileMenu.addEventListener('click', function(e) {
      if (e.target.tagName === 'BUTTON' || e.target.tagName === 'A') {
        mobileMenuToggleContainer.classList.remove('active');
        mobileMenuToggle.classList.remove('active');
        mobileMenu.classList.remove('active');
      }
    });
    
    // Close menu on window resize if screen becomes larger
    window.addEventListener('resize', function() {
      if (window.innerWidth > 450) {
        mobileMenuToggle.classList.remove('active');
        mobileMenu.classList.remove('active');
      }
    });
    
    // Close menu when clicking outside
    document.addEventListener('click', function(e) {
      if (!mobileMenuToggle.contains(e.target) && !mobileMenu.contains(e.target)) {
        mobileMenuToggle.classList.remove('active');
        mobileMenu.classList.remove('active');
      }
    });
  }
});
</script>
